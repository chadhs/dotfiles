{
  "title": "Custom Rules",
  "rules": [
    {
      "description": "Change left_command+hjkl to arrow keys",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^com.omnigroup.OmniFocus3$",
                "^com.apple.MobileSMS$",
                "^com.apple.Safari$"
              ],
              "type": "frontmost_application_unless"
            }
          ],
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": [
                "left_command"
              ],
              "optional": []
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^com.omnigroup.OmniFocus3$",
                "^com.apple.MobileSMS$"
              ],
              "type": "frontmost_application_unless"
            }
          ],
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "left_command"
              ],
              "optional": []
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^com.omnigroup.OmniFocus3$",
                "^com.apple.MobileSMS$"
              ],
              "type": "frontmost_application_unless"
            }
          ],
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": [
                "left_command"
              ],
              "optional": []
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^com.omnigroup.OmniFocus3$",
                "^com.apple.MobileSMS$",
                "^com.apple.Safari$"
              ],
              "type": "frontmost_application_unless"
            }
          ],
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [
                "left_command"
              ],
              "optional": []
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Modify keys in GeForce NOW",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^com.nvidia.gfnpc.mall$"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "left_command"
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
